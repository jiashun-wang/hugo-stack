{
  "name": "hugo-stack-site",
  "version": "1.0.0",
  "scripts": {
    "prebuild": "curl -sSL https://github.com/gohugoio/hugo/releases/download/v0.157.0/hugo_extended_0.157.0_Linux-64bit_static.tar.gz | tar -xz && mv hugo /tmp/hugo",
    "build": "/tmp/hugo --ignoreVendorPaths=\"*\" --minify --gc --cleanDestinationDir",
    "dev": "hugo server --ignoreCache --watch",
    "hugo:version": "/tmp/hugo version",
    "postbuild": "echo \"âœ… Build completed! Check ./public directory\""
  },
  "engines": {
    "hugo": ">=0.157.0"
  }
}